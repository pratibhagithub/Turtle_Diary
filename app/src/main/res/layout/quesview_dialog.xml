<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"

    >


    <TextView
        android:id="@+id/tv_ques_view_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/light_gray"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp_10"
        android:text="@string/hello"
        android:textSize="@dimen/bar_text_size"
        android:textStyle="bold"
        android:textColor="@color/black"></TextView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        >

        <TextView
            android:id="@+id/tv_ques"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dp_5"
            android:text="@string/hello"
            android:textSize="@dimen/setting_input_size"
            android:textColor="@color/black"

            />

        <EditText

            android:id="@+id/ed_answer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sign_in_input_height"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dp_15"
            android:layout_weight=".5"
            android:background="@drawable/edittext_bg"
            android:padding="@dimen/dp_5"
            android:textSize="@dimen/setting_input_size"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="number"/>

        <TextView
            android:id="@+id/tv_try_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dp_5"
            android:text="@string/hello"
            android:textColor="@color/orange_video_header"
            android:textSize="@dimen/setting_input_size"

            />
    </LinearLayout>

