<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bg_base"
    android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bg_base"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/subject_image_width"
        android:layout_height="@dimen/subject_image_height"
        app:srcCompat="@drawable/science_patch"
        android:id="@+id/img_sub_ela"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="@dimen/subject_image_width"
        android:layout_height="@dimen/subject_image_height"
        app:srcCompat="@drawable/science_patch"
        android:id="@+id/img_sub_math"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/img_sub_ela"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:layout_width="@dimen/subject_image_width"
        android:layout_height="@dimen/subject_image_height"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/science_patch"
        android:id="@+id/img_sub_science"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_sub_ela"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/progressBarSignInContainer"
        android:layout_width="match_parent"
        android:layout_height="647dp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:background="@color/black"
        android:alpha=".3"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</RelativeLayout>