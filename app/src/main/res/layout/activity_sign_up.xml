<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signin_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.SigninActivity">

    <LinearLayout
        android:id="@+id/tab_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_membership_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_15"
            android:singleLine="true"
            android:text="@string/hello"
            android:textColor="@color/white"
            android:textSize="@dimen/bar_text_size"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_acc_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_15"
            android:singleLine="true"
            android:text="@string/hello"
            android:textColor="@color/white"
            android:textSize="@dimen/bar_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_payment_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_15"
            android:singleLine="true"
            android:text="@string/hello"
            android:textColor="@color/white"
            android:textSize="@dimen/bar_text_size"
            android:textStyle="bold" />
 </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_bar_container"
        android:id="@+id/signup_fragment"
        >
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_finish_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cross"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_15"/>

</RelativeLayout>