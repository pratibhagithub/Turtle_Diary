<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:layout_marginBottom="@dimen/dp_15"
    android:id="@+id/ll_container">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/practice_list_image_background"
        android:elevation="4dp"
        android:minHeight="50dp">

        <ImageView
            android:id="@+id/iv_sub_topic_image"
            android:layout_width="@dimen/practice_width"
            android:layout_height="@dimen/practice_height"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
          />
        <ImageView
            android:id="@+id/iv_sub_topic_image_free_banner"
            android:layout_width="@dimen/practice_width"
            android:layout_height="@dimen/practice_height"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/free_band"
            android:visibility="gone"

            />
    </RelativeLayout>


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tv_sub_topic_name"
        android:layout_width="@dimen/practice_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/topic_name_padding"
        android:text="@string/about_app"
        android:textSize="@dimen/topic_practice_text_size"
        android:textColor="@color/black">

    </TextView>
</LinearLayout>
