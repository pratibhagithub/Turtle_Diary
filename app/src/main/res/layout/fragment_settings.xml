<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_40"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_sound_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="@dimen/dp_10"
                    android:text="@string/hello"
                    android:textColor="@color/black"
                    android:textSize="@dimen/setting_input_size" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:background="@color/light_gray">

                    <TextView
                        android:id="@+id/tv_bg_sound_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/dp_10"
                        android:padding="@dimen/dp_10"
                        android:text="@string/hello"
                        android:textColor="@color/black"
                        android:textSize="@dimen/setting_input_size" />

                    <ToggleButton
                        android:id="@+id/tg_background_sound"
                        android:layout_width="@dimen/toggle_width"
                        android:layout_height="@dimen/toggle_height"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/dp_10"
                        android:background="@drawable/customtoggle"
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:background="@color/light_gray">

                    <TextView
                        android:id="@+id/tv_effect_sound_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/dp_10"

                        android:padding="@dimen/dp_10"
                        android:text="@string/hello"
                        android:textColor="@color/black"
                        android:textSize="@dimen/setting_input_size" />

                    <ToggleButton
                        android:id="@+id/tg_effect_sound"
                        android:layout_width="@dimen/toggle_width"
                        android:layout_height="@dimen/toggle_height"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/dp_10"
                        android:background="@drawable/customtoggle"
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_25"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/restore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="@drawable/restore"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@string/hello"
                        android:textColor="@color/white"
                        android:textSize="@dimen/button_text_size" />

                    <TextView
                        android:id="@+id/logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/logout"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@string/hello"
                        android:textColor="@color/white"
                        android:textSize="@dimen/button_text_size" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/progress_container_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".3"
            android:background="@color/black"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>
    </RelativeLayout>