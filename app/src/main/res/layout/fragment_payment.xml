<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.PaymentFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:padding="@dimen/dp_30"
                android:background="@drawable/back_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1.6"
                android:id="@+id/detail_container"
                android:layout_below="@+id/iv_back"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_1"
                    android:layout_weight="0.3" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/light_gray"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/top_bottom_padding"
                    android:paddingLeft="@dimen/left_right_padding"
                    android:paddingRight="@dimen/left_right_padding"
                    android:paddingTop="@dimen/top_bottom_padding">

                    <TextView
                        android:id="@+id/tv_subscription_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/padding_between_rows"
                        android:text="@string/hello"
                        android:textColor="@color/black"
                        android:textSize="@dimen/payment_header_text_size"

                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_account_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/padding_between_rows"
                        android:text="@string/hello"
                        android:textColor="@color/black"
                        android:textSize="@dimen/payment_text_size" />

                    <TextView
                        android:id="@+id/tv_plan_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/padding_between_rows"
                        android:text="@string/hello"
                        android:textColor="@color/black"
                        android:textSize="@dimen/payment_text_size" />

                    <TextView
                        android:id="@+id/tv_bill_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/padding_between_rows"
                        android:text="@string/hello"
                        android:textColor="@color/black"

                        android:textSize="@dimen/payment_text_size" />

                    <TextView
                        android:id="@+id/tv_charge_after_fee_trial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/hello"
                        android:textColor="@color/black"
                        android:textSize="@dimen/payment_text_size" />

                    <TextView
                        android:id="@+id/tv_terms_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/padding_between_rows"
                        android:text="@string/hello"
                        android:textColor="@color/black"
                        android:textSize="@dimen/payment_small_text_size" />

                    <TextView
                        android:id="@+id/tv_complete_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_20"
                        android:background="@drawable/td_complete_payment"
                        android:gravity="center"
                        android:padding="@dimen/padding_between_rows"
                        android:text="@string/hello"
                        android:textColor="@color/white"
                        android:textSize="@dimen/payment_text_size" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_1"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_container"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="@dimen/left_right_padding"
                android:paddingRight="@dimen/left_right_padding"
                android:paddingTop="@dimen/padding_between_rows"
                android:paddingBottom="@dimen/padding_between_rows"
                android:text="@string/hello"
                android:textColor="@color/black"
                android:textSize="@dimen/payment_small_text_size" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/progressBarSignInContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:background="@color/black"
            android:alpha=".3">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </FrameLayout>

</ScrollView>