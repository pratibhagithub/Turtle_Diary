<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_20">

            <LinearLayout
                android:id="@+id/type_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tv_login_as_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="@dimen/dp_10"
                    android:text="@string/loginas"
                    android:textColor="@color/black"
                    android:textSize="@dimen/setting_input_size" />

                <Spinner
                    android:id="@+id/spinner_login_user_type"
                    style="@style/spinner_style"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/sign_in_input_height"
                    android:layout_marginLeft="@dimen/dp_15"

                    android:layout_gravity="center_vertical"
                    android:layout_weight="3.8"

                    android:gravity="center_vertical"
                    android:prompt="@string/promt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/classcode_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/type_ll"
                android:paddingBottom="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:visibility="visible"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tv_class_code_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="@dimen/dp_10"
                    android:text="@string/td_class_code"
                    android:textColor="@color/black"
                    android:textSize="@dimen/setting_input_size"
                    />

                <EditText
                    android:id="@+id/ed_class_code"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/sign_in_input_height"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="3.8"
                    android:background="@drawable/edittext_bg"
                    android:hint="@string/hint_class_code"
                    android:padding="@dimen/dp_5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/name_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/classcode_ll"
                android:paddingBottom="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tv_username_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="@dimen/dp_10"
                    android:singleLine="true"
                    android:text="@string/td_username"
                    android:textColor="@color/black"
                    android:textSize="@dimen/setting_input_size" />

                <EditText
                    android:id="@+id/ed_username"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/sign_in_input_height"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="3.8"
                    android:background="@drawable/edittext_bg"
                    android:hint="@string/hint_username"
                    android:padding="@dimen/dp_5"
                    android:singleLine="true" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/pwd_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_ll"
                android:paddingBottom="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tv_pwd_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="@dimen/dp_10"
                    android:singleLine="true"
                    android:text="@string/td_password"
                    android:textColor="@color/black"

                    android:textSize="@dimen/setting_input_size" />

                <EditText
                    android:id="@+id/ed_password"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/sign_in_input_height"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="3.8"
                    android:background="@drawable/edittext_bg"
                    android:hint="@string/hint_userpwd"
                    android:inputType="textPassword"
                    android:padding="@dimen/dp_5"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pwd_ll"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:weightSum="5">

                <View
                    android:id="@+id/viewleft"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/btm"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/ll_btm_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="3.8"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_authorise_device"
                        android:layout_width="@dimen/sign_in_button_width"
                        android:layout_height="@dimen/sign_in_button_height"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/pwd_ll"
                        android:layout_marginTop="@dimen/dp_25"
                        android:background="@drawable/restore"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        android:text="@string/authorise_device"

                        android:textColor="@color/white"
                        android:textSize="@dimen/button_text_size" />

                    <TextView
                        android:id="@+id/tv_forget_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_authorise_device"
                        android:gravity="right"
                        android:onClick="onForgotPasswordClick"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@string/fg_uname"
                        android:textColor="@color/blue_bottom_bar_bg"

                        android:textSize="@dimen/setting_input_size" />

                    <TextView
                        android:id="@+id/tv_forget_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_forget_user"
                        android:gravity="right"
                        android:onClick="onForgotPasswordClick"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@string/fg_pwd"
                        android:textColor="@color/blue_bottom_bar_bg"
                        android:textSize="@dimen/setting_input_size" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/signup_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btm"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_20">

                <TextView
                    android:id="@+id/tv_not_a_mem_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:text="@string/not_mem"
                    android:textColor="@color/blue_bottom_bar_bg"
                    android:textSize="@dimen/setting_input_size" />

                <TextView
                    android:id="@+id/tv_sign_up"
                    android:layout_width="@dimen/sign_in_button_width"
                    android:layout_height="@dimen/sign_in_button_height"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/sign_up"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="@string/signup"
                    android:textColor="@color/white"
                    android:textSize="@dimen/button_text_size" />
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/keyboard_height"
                android:layout_below="@+id/signup_ll"
                android:visibility="gone" />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/progressBarSignInContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:alpha=".3"
        android:background="@color/black"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</RelativeLayout>

